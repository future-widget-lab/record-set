{
  "name": "@future-widget-lab/record-collection",
  "version": "0.1.0",
  "description": "A lightweight helper class for managing and querying in-memory record collections using MongoDB-like filters with `sift`.",
  "license": "MIT",
  "author": "Carlos Lobo",
  "main": "dist/index.js",
  "module": "dist/record-collection.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/future-widget-lab/record-collection.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/record-collection.cjs.production.min.js",
      "limit": "10.13 KB"
    },
    {
      "path": "dist/record-collection.esm.js",
      "limit": "10.13 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/jest": "^29.5.14",
    "@types/lodash.orderby": "^4.6.9",
    "@types/lodash.uniqby": "^4.7.9",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.7",
    "size-limit": "^11.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "lodash.orderby": "^4.6.0",
    "lodash.uniqby": "^4.7.0",
    "sift": "^17.1.3"
  }
}
